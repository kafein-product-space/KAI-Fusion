# ==================================================================================
# KAI-Fusion Backend - Environment Configuration
# ==================================================================================

# Core Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
MASTER_API_KEY=your-api-key-to-access-workflows
ENVIRONMENT=development
BACKEND_PORT=23056
BACKEND_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kaifusion_dev
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
DATABASE_SSL=false
DISABLE_DATABASE=false
CREATE_DATABASE=true

# AI Services
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_PROJECT=kaifusion-dev

# Basic Settings
LOG_LEVEL=DEBUG
ALLOWED_ORIGINS=*

# Keycloak Settings
KEYCLOAK_ENABLED=true
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_VERIFY_SSL=false
KEYCLOAK_REALM=kaifusion
KEYCLOAK_CLIENT_ID=kaifusion-dev

# ==================================================================================
# OPTIONAL CONFIGURATIONS (uncomment as needed)
# ==================================================================================

# Database Pool Settings
# DB_POOL_SIZE=30
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=10
# DB_POOL_RECYCLE=1800
# DB_POOL_PRE_PING=true

# Authentication & Security
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# REFRESH_TOKEN_EXPIRE_DAYS=7
# SESSION_TTL_MINUTES=30
# MAX_SESSIONS=1000

# Rate Limiting & File Upload
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=uploads

# Workflow & Engine Settings
# ENABLE_WORKFLOW_TRACING=true
# TRACE_AGENT_REASONING=true
# TRACE_MEMORY_OPERATIONS=true
# AF_USE_STUB_ENGINE=false

# Enhanced Logging Options
# KAI_FUSION_LOG_LEVEL=DEBUG
# KAI_FUSION_DEBUG_COMPONENTS=workflow_engine,node_executor
# KAI_FUSION_TRACE_COMPONENTS=memory_manager
# KAI_FUSION_FILE_LOGGING=false
# KAI_FUSION_USE_COLORS=true
# KAI_FUSION_USE_EMOJIS=true

# Third-party API Keys
# OPENAI_API_KEY=your-openai-api-key
