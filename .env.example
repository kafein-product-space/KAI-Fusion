# ==================================================================================
# KAI-Fusion - Environment Configuration
# ==================================================================================

# Core Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
CREDENTIAL_MASTER_KEY=your-credential-master-key
ENVIRONMENT=development
BACKEND_PORT=23056
BACKEND_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kaifusion_dev
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
DATABASE_SSL=false
DISABLE_DATABASE=false
CREATE_DATABASE=true

# AI Services (Required for functionality)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_PROJECT=kaifusion-dev

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:23056
VITE_API_VERSION=/api/v1
VITE_NODE_ENV=development
VITE_ENABLE_LOGGING=true

# Basic Settings
LOG_LEVEL=DEBUG
ALLOWED_ORIGINS=*

# ==================================================================================
# OPTIONAL CONFIGURATIONS (uncomment and configure as needed)
# ==================================================================================

# Database Pool Settings
# DB_POOL_SIZE=30
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=10
# DB_POOL_RECYCLE=1800
# DB_POOL_PRE_PING=true

# Authentication & Security
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# REFRESH_TOKEN_EXPIRE_DAYS=7
# SESSION_TTL_MINUTES=30
# MAX_SESSIONS=1000

# Rate Limiting & File Upload
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=uploads

# Workflow Tracing
# ENABLE_WORKFLOW_TRACING=true
# TRACE_AGENT_REASONING=true
# TRACE_MEMORY_OPERATIONS=true

# Enhanced Logging
# KAI_FUSION_LOG_LEVEL=DEBUG
# KAI_FUSION_DEBUG_COMPONENTS=workflow_engine,node_executor
# KAI_FUSION_FILE_LOGGING=false
# KAI_FUSION_USE_COLORS=true
# KAI_FUSION_USE_EMOJIS=true

# Third-party API Keys
# OPENAI_API_KEY=your-openai-api-key
# COHERE_API_KEY=your-cohere-api-key
# TAVILY_API_KEY=your-tavily-api-key
# GOOGLE_API_KEY=your-google-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Engine Settings
# AF_USE_STUB_ENGINE=false

# Development/Testing
# VITE_APP_NAME=KAI-Fusion
# ENABLE_DEV_TOOLS=true
# ENABLE_SWAGGER_UI=true