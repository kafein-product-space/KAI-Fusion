# KAI-Fusion Docker Environment Configuration
# Copy this file to .env and customize

# Database
POSTGRES_USER=kaifusion
POSTGRES_PASSWORD=kaifusion_secret
POSTGRES_DB=kaifusion
DATABASE_URL=postgresql://kaifusion:kaifusion_secret@postgres:5432/kaifusion

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
CREDENTIAL_MASTER_KEY=your-credential-key-change-in-production

# Optional: Master API Key for backend-to-backend calls
# MASTER_API_KEY=your-master-api-key

# Frontend
VITE_API_BASE_URL=http://localhost:8000
